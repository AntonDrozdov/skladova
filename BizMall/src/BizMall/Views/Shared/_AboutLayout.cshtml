        @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)

    </head>
    <body>
<!--МЕНЮ ВЕРХНЕЕ-->
        <div id="navbar" class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" data-target="#navbarcollapseMain" data-toggle="collapse" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="IndexCat" class="navbar-brand mainAppIcon">@ViewData["HeaderTitle"]</a>
                </div>
                <div id="navbarcollapseMain" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Home" asp-action="About" style="padding-top: 15px;">О проекте</a></li>
                    </ul>
                    @*@await Html.PartialAsync("_LoginPartial")*@
                </div>
            </div>
        </div>
        <div class="container body-content">
            <div class="row row-offcanvas row-offcanvas-right">
<!--МЕНЮ КАТЕГОРИЙ-->
                <div class="col-md-12">
                    
                
<!--СТРОКА ПОИСКА-->

<!--ВЫВОД СТАТЕЙ-->
                    @RenderBody()
                </div>
            </div>
            
            <hr />
            <footer>
                <p>&copy; 2016 - @DateTime.Now.Year @ViewData["FooterTitle"]</p>
            </footer>
        </div>

