@model ArticleList.Models.CommonModels.PagingInfo

<nav aria-label="...">
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            @if (i == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a asp-controller="Home" asp-action = "SearchHashTag" asp-route-hashtag = "@Model.hashtag" asp-route-Page="@i">
                        <span class="page-link">
                            @i
                        </span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a asp-controller="Home" asp-action = "SearchHashTag" asp-route-hashtag = "@Model.hashtag" asp-route-Page="@i" class="page-link">
                        @i
                    </a>
                </li>
            }
        }
    </ul>
</nav>